<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_red"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:titleTextColor="#ffffff"
        app:subtitleTextColor="#ffffff"
        app:navigationIcon="@drawable/oq"
        android:visibility="visible" />
    /////////////////////////////////////////////////////
<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="20"
    android:padding="20dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
          android:src="@drawable/bea"
        />

    <ImageView
        android:id="@+id/player_layout_album"
        android:layout_width="240dp"    
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/player_layout_album_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
          android:src="@drawable/beb"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
          android:src="@drawable/ace"
        />

</FrameLayout>
    /////////////////////////////////////////////////////
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gredient_black_wihte_black"/>
///////////////////////////////////////////////////////////100dp
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1.5"
            android:background="#000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timer_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" android:layout_weight="0"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/player_seekbar"
                android:thumb="@drawable/seekbar_gredient_bar"
                />

            <TextView
                android:id="@+id/timer_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp" android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:text="00:00"
                android:textSize="16dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
/////////////////////////////////////////////////////////
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000">
            <ImageView
                android:id="@+id/play_order"
                android:layout_width="162px"
                android:layout_height="162px"
                  android:src="@drawable/adj"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imageButton"
                android:layout_margin="5pt"
                android:layout_width="204px"
                android:layout_height="204px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                  android:src="@drawable/akp" />

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="276px"
                android:layout_height="276px"
                android:layout_margin="5pt"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                  android:src="@drawable/ako" />

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_margin="5pt"
                android:layout_width="204px"
                android:layout_height="204px"
                android:layout_weight="1"
                  android:src="@drawable/akj"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/play_list"
                android:layout_width="162px"
                android:layout_height="162px"
                  android:src="@drawable/adz"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
    <!--
    android:baselineAligned="false"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme"
    -->

</LinearLayout>
